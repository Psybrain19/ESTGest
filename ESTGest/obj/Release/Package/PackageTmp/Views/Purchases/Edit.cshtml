@model ESTGest.Models.Purchase

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Compra</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.p_id)

        <div class="form-group">
            @Html.LabelFor(model => model.p_designation, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.p_designation)
                @Html.ValidationMessageFor(model => model.p_designation)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.p_total, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.p_total)
                @Html.ValidationMessageFor(model => model.p_total)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Produtos", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="row">
                <div class="container">
                    <div class="col-md-6">
                        @Html.Action("ProductList", "Purchases")
                    </div>
                    <div class="col-md-6"></div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Voltar", "IndexAdmin")
    }
    else
    {
        @Html.ActionLink("Voltar", "Index")
    }
</div>
