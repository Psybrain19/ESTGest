@model List<ESTGest.Models.ChargeAccountReference>
@{
    ViewBag.Title = "ChargeBankAccount";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Escolha a Referência</h2>
        <div class="form-group">
            @Html.Label("Simulação de Carregamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="row">
                <div class="container">
                    <div class="col-md-6">
                        <h3>Entidade:12465</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th style="width: 200px; margin-bottom: 50px;">Numero</th>
                                    <th style="width: 50px; margin-left:70px;">Valor</th>
                                    <th style="width: 50px; margin-left:70px;">Validade</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ESTGest.Models.ChargeAccountReference data in Model)
                                {

                                    <tr>
                                        <th>
                                            @data.car_reference
                                        </th>
                                        <th class="qty">
                                            @data.car_amount €
                                        </th>
                                        <th class="qty">
                                            @data.car_valtime
                                            </th>
                                            <th>
                                                <input id="pr_id" name="RefIds" type="checkbox" value="@data.car_id" />
                                            </th>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6"></div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Carregar Saldo" class="btn btn-default" />
            </div>
        </div>
    </div>
}