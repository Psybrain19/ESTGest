@model ESTGest.Models.ChargeAccountReference

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Referencia de Carregamento</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.car_id)

        <div class="form-group">
            @Html.LabelFor(model => model.car_reference, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.car_reference)
                @Html.ValidationMessageFor(model => model.car_reference)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.car_state, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.car_state)
                @Html.ValidationMessageFor(model => model.car_state)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.car_valtime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.car_valtime)
                @Html.ValidationMessageFor(model => model.car_valtime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.car_amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.car_amount)
                @Html.ValidationMessageFor(model => model.car_amount)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
