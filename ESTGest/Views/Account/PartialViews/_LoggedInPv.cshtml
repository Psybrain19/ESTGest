@using ESTGest.Models

@if (User.Identity.IsAuthenticated)
{
    <p class="text-center">
        <img src="~/img/usericon.png" style="width: 78%;"/>
        @Html.ActionLink("Bem-Vindo, " + User.Identity.Name + "", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "welcome-user" })
    </p>
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "logoff-style" }))
    {
        //@Html.AntiForgeryToken()

        <p class="text-center"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></p>
    }
    <p><h4 style="text-align:center; margin-bottom: 35px; color:#FFF;">Saldo:@Html.Action("MyBudget", "Account") €</h4></p>
}
else
{
    @Html.Action("Login", "Account")
}


