@model IEnumerable<ESTGest.Models.User>

@{
    ViewBag.Title = "UsersList";
}

<h2>Lista de Utilizadores</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.u_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.u_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.u_password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.ba_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChargeAccountReference.car_reference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.c_designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseClass.cc_designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Purchase.p_designation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.u_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.u_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.u_password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccount.ba_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChargeAccountReference.car_reference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.c_designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseClass.cc_designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase.p_designation)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUser", new { id=item.u_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.u_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.u_id })
        </td>
    </tr>
}

</table>
