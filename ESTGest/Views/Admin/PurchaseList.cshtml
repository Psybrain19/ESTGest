@model IEnumerable<ESTGest.Models.Purchase>

@{
    ViewBag.Title = "PurchaseList";
}

<h2>Lista de Compras</h2>

<p>
    @Html.ActionLink("Adicionar", "PurchaseCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.p_designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.p_total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.p_designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.p_total)
        </td>
        <td>
            @Html.ActionLink("Editar", "PurchaseEdit", new { id=item.p_id }) |
            @Html.ActionLink("Detalhes", "PurchaseDetails", new { id=item.p_id }) |
            @Html.ActionLink("Apagar", "PurchaseDelete", new { id=item.p_id })
        </td>
    </tr>
}

</table>
